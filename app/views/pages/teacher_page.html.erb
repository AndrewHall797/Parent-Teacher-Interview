
<div class="container-fluid">
    
<nav class="navbar navbar-default  navbar-fixed-top">
        <div class="navbar-header">
          <a class="navbar-brand" href="#">Earl Of March S.S</a>
        </div>
        <ul class="nav navbar-nav pull-right">
          <li class="active"><%= link_to "Log out", session_destroy_path %></a></li>
        </ul>
</nav>
    
    <div class="row">
        <div class="col-md-8 col-md-offset-1 col-lg-8 col-lg-offset-1 col-sm-8 col-sm-offset-1 col-xs-8 col-xs-offset-1">
            <h1>Welcome to the Earl of March Database <%=@teachername%> <%= @teacherlast%> <h1> 
        </div>
    </div>
    
  <div class="row">
    <div class="col-md-8 col-md-offset-1 col-lg-8 col-lg-offset-1 col-sm-8 col-sm-offset-1 col-xs-8 col-xs-offset-1">
        <table class="table">
            <tr>
                <th>Times</th>
                <th>Schedualed</th>
                <th></th>
            </tr>
           
            <%times = [1,2,3,4,5,6]%>
            <% for i in times.each %>
                <tr>
                    <td><%= times[i-1] %></td>
                    <% unless @reservations[i-1] == "Avalible" %>
                    <% users_times = @reservations[i-1].split(" ")%>
                    <td><%= "#{users_times[2]} #{users_times[3]}"%></td>
                    <% else %>
                    <td><%= @reservations[i-1] %></td>
                    <% end %>
                    <% unless @reservations[i-1] == "Avalible" %>
                    <td> <%= link_to "Delete", teacher_remove_selected_path(:string1 => @reservations[i-1] , :place => i-1), class: "btn-primary btn-sm" %> </td>
                    <% else %>
                    <td></td>
                    <% end %>
                </tr>
            <% end %>
        </table>
        <div><%= link_to "Reset Scheduale", reset_path, class: "btn btn-primary btn-lg"%></div>
    </div>
  </div>
    
</div>