<div class="containter">
    <div class="row">
    <div class style= "text-align: center; text-decoration: underline">
        <h1 style="font-size:50px">Welcome to the Earl of March Database <%=@username%> <%= @userlast%> <h1> 
    </div>

    <div class="col-md-4 col-md-offset-1">
        <div class = "table-tb">
        <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Last Name</th>
                <th>Times</th>  
            </tr>
        </thead>
            <% @teacher.each do |teacher| %>
            <thead>
                <tr> 
                    <td> <%= link_to teacher.name, scheduling_path(:teacher_account => teacher.id) %></td>
                    <td> <%= teacher.last %></td>
                </tr>
            </thead>   
            <% end %>
        </table>
        </div>
    </div> 
       
    <div class="col-md-4 col-md-offset-1">
        <table class="table">
            <thead>
            <tr>
                <th>#</th>
                <th>Time</th>
                <th>Teacher Name</th>
            </tr>
            </thead>
            <% numbers = [1,2,3,4] %>
            <% numbers.each do |number| %>
            <%
                if @user.your_times[number-1] == "NA"
                    string = ["NA","NA"]
                else
                    string = @user.your_times[number-1].split(" ") 
                end
            %>
                <thead>
                <tr>
                    <th><%= numbers[number-1] %></th>
                    <th><%= string[0] %></th>
                    <th><%= string[1] %></th>
                </tr>
                </thead>
            <% end %>
            
        </table>
        <%= link_to "Clear Schedual",reset_student_schedule_path, class: "btn-primary btn-sm" %>
    </div>
</div>          
</div>

    <p1> <%= link_to "Log out", session_destroy_path, class: "btn-primary btn-sm col-md-1 col-md-offset-1" %> </p1>