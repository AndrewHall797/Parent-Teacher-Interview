<div class>
    <h1>Welcome to the scheduling page of <%=@whichteacher.name%></h1>
</div>

<div class="col-md-4">
    <table class="table table-bordered">
        <tr>
            <th>Time</th>
            <th>Avalibility</th>
        </tr>
        
        <%times = [1,2,3,4,5,6]%>
        <% for i in times.each %>
        <% reservations =  @reservations[i-1].split(" ")%>
            <tr>
                <td><%= times[i - 1] %></td>
                <td><%= link_to "#{reservations[0]} for #{reservations[2]} #{reservations[3]}", schedule_path(:teacher_account => @whichteacher.id, :place => i-1) %></td>
            </tr>
        <% end %>
        
    </table>
    <%= link_to "Back", student_page_path, class: "btn-primary btn-sm" %>
</div>