<h1>Login</h1>

<%= form_tag sessions_path do %>
    <div class "field">
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email]%>
    </div>
    
    <div class "field">
        <%= label_tag :password %><br />
        <%=text_field_tag :password%>
    </div>
    
    <div class "field">
        <%= label_tag :Role %><br />
        <%= select_tag "role",options_for_select([['Student' ,'Student'], ['Teacher', 'Teacher'], ['Principle','Principle']]) %>
    </div>
    
    <div class "actions">
        <%= submit_tag  "LOG IN" %>
    </div>
    
<% end %>