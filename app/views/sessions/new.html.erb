<div class="container">
    <div class="row">
        <div>
            <h1 style="font-size: 60px;text-align: center">Earl Of March S.S Interview Scheduler</h1>
        </div>
        <div class="col-md-4 col-lg-6 col-xs-4 col-sm-4 col-md-offset-4 col-lg-offset-3 col-sm-offset-4 col-xs-offset-4" style= "text-align: center">
            <h1 style= "font-size: 50px; text-decoration: underline">Login</h1>
        
            <%= stylesheet_link_tag "sessions.scss" %>
            <%= form_tag sessions_path do %>
                <p id="para1">
                    <%= label_tag :email %><br />
                    <%= text_field_tag :email, params[:email], class: "form-control"%>
                </p id="para1">
            
                <p id="para1">
                    <%= label_tag :password %><br />
                    <%=password_field_tag :password, nil , class: "form-control"%>
              </p id="para1">
            
                <p id="para1">
                    <%= label_tag :Role %><br />
                    <%= select_tag "role",options_for_select([['Student' ,'Student'], ['Teacher', 'Teacher'], ['Principle','Principle']]), {class: "form-control"} %>
                </p id="para1">
            
                <p id="para1">
                    <%= submit_tag  "LOG IN", class: "btn-primary btn-lg" %>
                </p id="para1">
            
            <% end %>
        </div>        
    </div>
</div>