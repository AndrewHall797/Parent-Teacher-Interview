<div class="col-md-4 col-md-offset-4" style= "text-align: center">
<h1>Create Student Account</h1>

<%=form_for @user do|f| %>
    <% if @user.errors.any? %>
    <div class="alert alert-danger">
        
        <h2>Form is Invalid</h2>
        <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end%>
        </ul>
    </div>
    <%end%>
    
    <div class "field">
        <%= f.label "Email"%><br />
        <%= f.text_field :email,class: "form-control", :required => true  %><br />
    </div>
    
    <div class "field">
        <%= f.label :password %><br />
        <%= f.password_field :password,class: "form-control", :required => true  %><br />
    </div>
    
    <div class "field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation,class: "form-control", :required => true  %><br />
    </div>
    
     <div class "field">
        <%= f.label :name %><br />
        <%= f.text_field :name,class: "form-control", :required => true  %><br />
    </div>
    
     <div class "field">
        <%= f.label :last_name %><br />
        <%= f.text_field :last_name,class: "form-control", :required => true  %><br />
    </div>
    
    <div class="actions">
        <%= f.submit :Submit, class: 'btn btn-primary' %>
     </div>
     
    <div class="top-buffer">
        <%= link_to "Back", prin_user_path, class:"btn-primary btn-lg"%>    
    </div> 
        
<% end %>
</div>